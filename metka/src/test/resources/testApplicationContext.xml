<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <context:component-scan base-package="fi.uta.fsd.metka">
        <context:exclude-filter expression="org.springframework.stereotype.Controller" type="annotation" />
    </context:component-scan>

    <!-- Root Context: defines shared resources visible to all other web components -->
    <bean id="localeResolver" class="org.springframework.web.servlet.i18n.CookieLocaleResolver">
        <property name="defaultLocale" value="fi_FI"/>
    </bean>

    <bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
        <property name="basename" value="classpath:messages" />
        <property name="defaultEncoding" value="UTF-8" />
        <property name="cacheSeconds" value="60" />
        <property name="useCodeAsDefaultMessage" value="true" />
    </bean>

    <import resource="testHibernateHSQL.xml" />

    <bean id="startupScanner" class="fi.uta.fsd.metka.data.automation.StartupScanner" />

    <!-- For testing only -->
    <bean id="metkaObjectMapper" class="fi.uta.fsd.metka.mvc.MetkaObjectMapper" />
</beans>